#!/usr/bin/env perl
use strict;
use warnings;
use CSS::Coverage;

@ARGV >= 2 or die "usage: $0 foo.css bar.html[, baz.html ...]\n";

my ($css_file, @html_files) = @ARGV;

my $coverage = CSS::Coverage->new(
    css       => $css_file,
    documents => \@html_files,
);

my $report = $coverage->check;

for my $selector ($report->unmatched_selectors) {
    print "$selector\n";
}
